{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
  },
  "include": [
    "src/**/*",
    "src/contracts/Multicall2.json",
    "./package.json",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
